<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %> | CSE 340 App</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/site/icon.png" type="image/x-icon"/>
</head>
<body>
    <div class="form-container">
        <h1>Add New Inventory</h1>
        <div class="flash-message">
            <% if (typeof message !== 'undefined') { %>
                <p><%= message %></p>
            <% } %>
        </div>
        <form action="/inv/add-inventory" method="post">
            <input type="text" name="inv_make" placeholder="Vehicle Make" required>
            <input type="text" name="inv_model" placeholder="Vehicle Model" required>
            <input type="text" name="inv_year" placeholder="Vehicle Model" required>
            <input type="text" name="inv_description" placeholder="Vehicle Description" required>
            <img src="images/vehicles/no-image.png" alt="No Image Avaiable" style="width: 30%; height: auto">
            <input type="text" name="inv_thumbnail" placeholder="Thumbnail URL" required>
            <input type="text" name="inv_price" placeholder="Vehicle Price" required>
            <input type="text" name="inv_miles" placeholder="Vehicle Miles" required>
            <input type="text" name="inv_color" placeholder="Vehicle Color" required>
            <select name="classification_id" required>
                <option value="">Choose a Classification</option>
                <%= classificationOptions %>
            </select>
            <button type="submit">Add Inventory</button>
        </form>
    </div>
</body>