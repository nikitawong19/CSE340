<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %> | CSE 340 App</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/site/icon.png" type="image/x-icon"/>
</head>

<body>
    <h1>Add New Inventory</h1>
    <% if (typeof message !== 'undefined') { %>
      <p><%= message %></p>
    <% } %>
    <form action="/inv/add-inventory" method="post">
        <label for="make">Make:</label>
        <input type="text" id="make" name="inv_make" required>
        <label for="model">Model:</label>
        <input type="text" id="model" name="inv_model" required>
        <label for="year">Year:</label>
        <input type="number" id="year" name="inv_year" required>
        <label for="price">Price:</label>
        <input type="number" id="price" name="inv_price" required>
        <label for="classification">Classification:</label>
        <%= classificationList %>
        <input type="submit" value="Add Inventory">
    </form>
</body>